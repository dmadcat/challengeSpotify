<% layout('layouts/boilerplate')%>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1><%=Name%>'s albums</h1>
            <%for(let album of allAlbums){%>
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <img class="img-fluid" src="<%=album.cover.url%>" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <h5 class="card-title"><%=album.name%></h5>
                          <p class="card-text">Track's number <%=album.tracks%></p>
                          <p class="card-text"><small class="text-muted">RELEASED <%=album.released%></small></p>
                        </div>
                      </div>
                    </div>
                  </div>
            <%}%> 
        </div>
    </div>
</div>